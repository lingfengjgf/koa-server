{
  "apps": [
    {
      "name": "koa-server",
      "script": "./src/main.js",
      "watch": true,
      "instances": 3,
      "log_date_format": "YYYY-MM-DD HH:mm Z",
      "error_file": "./logs/error.log",
      "out_file": "./logs/out.log",
      "ignore_watch": [
        "node_modules",
        "logs"
      ],
      "env": {
        "NODE_ENV": "development"
      },
      "env_production": {
        "NODE_ENV": "production"
      }
    }
  ]
}